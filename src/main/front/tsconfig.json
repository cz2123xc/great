{
  "compilerOptions": {
    "baseUrl": "./src", // import root path
    "outDir": "./dist/", // path to output directory
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext", // TypeScript supports commonjs, amd, umd, es6, es2015, esnext
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src", // compile root directory
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
  },
  "include": [
    "src"
  ]
}
